<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update A Product</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="topnav">
        <a href="/admin/user">Home Users</a>
        <a href="/admin/user/create">Create User</a>
        <a href="/admin/product">Home Products</a>
        <a href="/admin/product/create">Create Product</a>
        <a href="/admin/coupon">Home Coupons</a>
        <a href="/admin/coupon/create">Create Coupon</a>
        <a href="/admin/order">Home Orders</a>
        <a href="/admin/payment">Home Payments</a>
        <a href="/admin/order/all-order">Home Order Management</a>
        <a href="/admin/logout">Logout</a>
    </div>
    <div class="form-add-new">
        <form action="/admin/product/update-product" method="post">
            <fieldset>
                <legend>Update Product:</legend>

                <div class="input-group d-none">
                    <label>
                        ID:
                    </label>
                    <input 
                    type="text" 
                    name="productId" 
                    value="<%= productEdit.id %>"
                    />
                </div>

                <div class="input-group">
                    <label>
                        Name:
                    </label>
                    <input 
                    type="text" 
                    name="name" 
                    value="<%= productEdit.name %>"
                    />
                </div>

                <div class="input-group">
                    <label>
                        Description Name:
                    </label>
                    <input type="text" name="name_description" value="<%= productEdit.description.name_description %>" />
                </div>
                <div class="input-group">
                    <label>
                        Product Code:
                    </label>
                    <input type="text" name="product_code" value="<%= productEdit.description.product_code %>"/>
                </div>
                <div class="input-group">
                    <label>
                        Product Type: 
                    </label>
                    <input type="text" name="product_type" value="<%= productEdit.description.product_type %>"/>
                </div>
                <div class="input-group">
                    <label>
                        Connection Standard: 
                    </label>
                    <input type="text" name="connection" value="<%= productEdit.description.connection %>" />
                </div>
                <div class="input-group">
                    <label>
                        Switch Type: 
                    </label>
                    <input type="text" name="switch_type" value="<%= productEdit.description.switch_type %>"/>
                </div>
                <div class="input-group">
                    <label>
                        Durability: 
                    </label>
                    <input type="text" name="durability" value="<%= productEdit.description.durability %>"/>
                </div>
                <div class="input-group">
                    <label>
                        Format:
                    </label>
                    <input type="text" name="format" value="<%= productEdit.description.format %>"/>
                </div>
                <div class="input-group">
                    <label>
                        Guarantee:
                    </label>
                    <input 
                    type="text" 
                    name="guarantee" 
                    value="<%= productEdit.guarantee %>"
                    />
                </div>
                <div class="input-group">
                    <label>
                        New Price:
                    </label>
                    <input 
                    type="text" 
                    name="new_price" 
                    value="<%= productEdit.new_price %>"
                    />
                </div>
                <div class="input-group">
                    <label>
                        Old Price:
                    </label>
                    <input 
                    type="text" 
                    name="old_price" 
                    value="<%= productEdit.old_price %>"
                    />
                </div>
                <div class="input-group">
                    <label>
                        Image:
                    </label>
                    <input 
                    type="text" 
                    name="image" 
                    value="<%= productEdit.image %>"
                    />
                </div>
                <div class="input-group">
                    <label>
                        Type:
                    </label>
                    <input 
                    type="text" 
                    name="type" 
                    value="<%= productEdit.type %>"
                    />
                </div>
                <div class="input-group">
                    <label>
                        Count In Stock:
                    </label>
                    <input 
                    type="text" 
                    name="countInStock" 
                    value="<%= productEdit.countInStock %>"
                    />
                </div>
                <div class="input-group">
                    <label>
                        Total Rate:
                    </label>
                    <input 
                    type="text" 
                    name="total_rate" 
                    value="<%= productEdit.total_rate %>"
                    />
                </div>
                <div class="input-group">
                    <label>
                        Sold:
                    </label>
                    <input 
                    type="text" 
                    name="selled" 
                    value="<%= productEdit.sold %>"
                    />
                </div>
                
                <div>
                    <button onclick="alert('Update product successfully')"> Save </button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>